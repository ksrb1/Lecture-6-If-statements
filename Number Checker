int number{};

  cout << "enter a number to check if its positive, negative or zero" << endl;
  cin >> number;

  if (number == 0) {
    cout << "The number is a zero" << endl;
  }
  else if (number > 0) {
    cout << "The number is postive" << endl;
  }
  else {
    cout << "The number is negative " << endl;
  }
